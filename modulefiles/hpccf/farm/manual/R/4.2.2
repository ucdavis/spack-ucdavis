#%Module1.0
# vim: syntax=tcl

module-whatis "R 4.2.2 with a large collection of libraries."

set envname "r-4.2.2"
prereq conda/base/latest

prepend-path R_LIBS_SITE /share/apps/22.04/rlibs/4.2.2

set rlibsuser "$env(HOME)/R/x86_64-conda-linux-gnu/4.2"
setenv R_LIBS_USER $rlibsuser
file mkdir $rlibsuser

if { [module-info mode load] } {
	puts stdout "conda activate $envname 2> /dev/null; "
}

if { [module-info mode unload] } {
	puts stdout "conda deactivate 2> /dev/null; "
}
